<div class="container  mt-3 pb-4">
    <div class="row">
        <div class="col-md-3">
        <%= render "rooms/sidebar"%>
        </div>
        <div class="col-md-4">
            <div class="card mt-3" style="width: 50rem;">
                <strong>
                    <div class="card-header bg-success text-light">
                    Location
                    </div>
                <strong>
                <div class="p-3">
                    <div class="p-3">
                        <%= form_for @room do |f| %>
                            <div class="">
                                <%= f.label :Address %>
                                <p><%= f.text_field :address, placeholder: "What is the address?", class:"form-control" %></p>
                            </div>
                            <div class="row">
                                <%= f.submit "Save", class: "btn btn-outline-success my-2 my-sm-0 ml-3" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>    
        </div>
    </div>
</div>