<div class=" container editprofile">
    <div class="row">
        <div class="col-md-4">
            <%= render "reservations/sidebar"%>
        </div>
        <div class="col-md-4">
            <div class="card mt-3" style="width: 50rem;">
            <strong><div class="card-header bg-success text-light text-center"></strong>
                Your Trips
            </div>
            <div class="card-body">
                <% @reservations.each do |reservation| %>
                <div class="row">
                    <div class="col-3">
                        <%= reservation.start_date.strftime('%v') %>
                    </div>
                    <div class="col-2">
                        <% if reservation.room.photos.any? %>
                            <%= image_tag reservation.room.photos.first.image.url, class: "mr-5 profile_picture_index" %>
                        <% else %>
                            <%= image_tag "no-image.png", class: "profile_picture_index2" %>
                        <% end %>
                    </div>
                    <div class="col-5">
                        <%= reservation.room.name %>
                        <%= image_tag avatar_url(reservation.room.user), class: "rounded-circle profile_picture mx-2" %>
                        <%= reservation.room.user.name %>
                    </div>
                    <div class="col-2">
                        <%= link_to "Review host","#", class: "btn btn-outline-success" %>
                    </div>
                </div>
                <div class="border-bottom my-3"></div>
                <% end %>
            </div>
        </div>
    </div>
</div>
