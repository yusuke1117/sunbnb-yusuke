<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card mt-3">
                <%= image_tag avatar_url(current_user), class:"profile_gazou" %>
                <strong><div class="card-header bg-success text-light text-center">
                    Verification
                </div></strong>
                <div class="card-body p-3">
                    <% if current_user.provider? %>
                        <p>Facebook<i class="fa fa-check float-right"></i></p>
                    <% else %>
                        <p>Facebook<i class="fa fa-times-circle float-right"></i></p>
                    <% end %>

                    <% if current_user.phone_number? %>
                        <p class="mb-1">Phone Number<i class="fa fa-check float-right"></i></p>
                    <% else %>
                        <p class="mb-1">Phone Number<i class="fa fa-times-circle float-right"></i></p>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mt-3" style="width: 50rem;">
                <strong><div class="card-header bg-success text-light text-center">
                    <%= current_user.name%>
                </div><strong>
                <div class="p-3">
                    
                </div>    
            </div>   
        <div>
    <div>
</div>
