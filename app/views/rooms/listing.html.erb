<div class="container  mt-3 pb-4">
    <div class="row">
        <div class="col-md-3">
        <%= render "rooms/sidebar"%>
        </div>
        <div class="col-md-4">
            <div class="card mt-3" style="width: 50rem;">
                <strong>
                    <div class="card-header bg-success text-light">
                        Listing
                    </div>
                <strong>
                <div class="p-3">
                    <div class="p-3">
                        <%= form_for @room do |f| %>
                            <div class="row">
                                <div class="col-4 select">
                                    <%= f.label :Home_Type %>
                                    <p><%= f.select :home_type, [["Apartment","Apartment"], ["House","House"], ["Bed & Breakfast","Bed & Breakfast"]], prompt: "select...", class:"form-control" %></p>
                                </div>
                                <div class="col-4 select">
                                    <%= f.label :Room_Type %>
                                    <p><%= f.select :room_type, [["Entire","Entire"], ["Private","Private"], ["Shared","Shared"]], prompt: "select...", class:"form-control" %></p>
                                </div>
                                <div class="col-4 select">
                                    <%= f.label :Accommodate %>
                                    <p><%= f.select :gest_count, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "select...", class:"form-control" %></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 select">
                                    <%= f.label :Bedrooms %>
                                    <p><%= f.select :bedroom_count, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "select...", class:"form-control" %></p>
                                </div>
                                <div class="col-4 select">
                                    <%= f.label :Bathrooms %>
                                    <p><%= f.select :bathroom_count, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "select...", class:"form-control" %></p>
                                </div>
                            </div>
                            <div class="row">
                                <%= f.submit "Save", class: "btn btn-outline-success my-2 my-sm-0 ml-3" %>
                            </div>
                        <% end %>
                    </div>    
                </div>    
            </div>   
        </div>
    </div>
</div>
